@model List<string>
<link rel="stylesheet" href="~/Content/brands.css" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/locomotive-scroll@3.5.4/dist/locomotive-scroll.css" />
<div id="blob"></div>
<div id="blur"></div>
<div id="main" data-scroll-container>
    <div id="page1" data-scroll>
        @using (Html.BeginForm("Brand", "Home", FormMethod.Get, new { id = "searchForm" }))
        {
            <input type="text" name="term" class="searchBar" placeholder="Search Brand" />
        }
    </div>
    <script>
document.getElementById("searchInput").addEventListener("keypress", function (event) {
    if (event.key === "Enter") {
        event.preventDefault();
        document.getElementById("searchForm").submit();
    }
});
var message = "@ViewBag.Message";
if (message !== "") {
    alert(message);
}
    </script>
    <div class="container" id="page2" data-scroll>
        <div class="row flex">
            <!--foreach-->
            @foreach (var brand in Model)
            {
                <div class="col-lg-2">
                    <a class="card" href="@Url.Action("Detail", "Home", new { catalogname = Request["catalogname"], brandname = brand })">
                        <div class="card-content">
                            <h2 class="brandName">@brand</h2>
                        </div>
                    </a>
                </div>
            }
        </div>
    </div>
    <div class="line"></div>
    <div id="page3">
        <section class="footer">
            <div class="share">
                <a href="#" class="fab fa-facebook" id="facebook"></a>
                <a href="#" class="fab fa-x-twitter" id="twitter"></a>
                <a href="#" class="fab fa-instagram" id="instagram"></a>
                <a href="#" class="fab fa-linkedin" id="linkedin"></a>
                <a href="#" class="fab fa-pinterest" id="pinterest"></a>
            </div>
            <div class="credit">
                Created by <span>Ata Kürklü </span>| All Rights Reserved
            </div>
        </section>
    </div>
</div>
<script src="https://cdn.jsdelivr.net/npm/locomotive-scroll@3.5.4/dist/locomotive-scroll.js"></script>
